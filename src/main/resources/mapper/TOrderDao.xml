<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jddemo.sharding.TOrderDao">

    <resultMap type="com.example.jddemo.sharding.TOrder" id="TOrderMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="orderId" column="order_id" jdbcType="INTEGER"/>
    </resultMap>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TOrderMap"  parameterType="com.example.jddemo.sharding.TOrder">
        select
        user_id, user_name, order_id
        from t_order
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert"  parameterType="com.example.jddemo.sharding.TOrder">
        insert into t_order(user_id, user_name)
        values (#{userId}, #{userName})
    </insert>


</mapper>

